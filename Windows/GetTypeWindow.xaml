<Window x:Class="AddPropertyToBinding.Windows.GetTypeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddPropertyToBinding.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="300" MaxHeight="120" MaxWidth="400" Title="Set property type">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Write down property type:" Margin="10"/>
        <TextBox x:Name="tbType" Grid.Row="1" Margin="10, 0, 10, 10" VerticalContentAlignment="Center" Padding="4" KeyDown="tbType_KeyDown"/>
    </Grid>
</Window>
